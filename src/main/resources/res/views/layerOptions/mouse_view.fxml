<Accordion fx:id="mouseOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.MouseController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
  <panes>

    <TitledPane fx:id="titledPaneMouse" text="title_mouse">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <VBox alignment="TOP_CENTER" spacing="10">
              <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
              </padding>

              <children>
                <Button fx:id="buttonMouse" text="button_mouse"
                        onAction="#handleButtonClick"/>
                <HBox fx:id="hboxMouse" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewMouse"
                               fitWidth="130" fitHeight="105"
                               preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelMouse" minHeight="-Infinity" wrapText="true"
                       text="label_mouse"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneHand" text="title_hand">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <Button fx:id="buttonPoint" text="button_add_point"/>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneArea" text="title_area">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <CheckBox fx:id="checkboxMovement" text="checkbox_movement">
              <tooltip>
                <Tooltip fx:id="tooltipMovement" text="tooltip_movement"/>
              </tooltip>
            </CheckBox>

            <!-- <HBox alignment="BOTTOM_RIGHT" spacing="4">
              <children>
                <Label fx:id="labelArea" textAlignment="RIGHT"
                       minHeight="-Infinity" wrapText="true"
                       text="label_mouse_area" />

                <Label fx:id="labelAreaX" textAlignment="RIGHT"
                       minHeight="-Infinity" wrapText="true"
                       text="label_X" />
                <Spinner fx:id="spinnerMouseAreaX"
                         minWidth="58" maxWidth="58"/>

                <Label fx:id="labelAreaY" textAlignment="RIGHT"
                       minHeight="-Infinity" wrapText="true"
                       text="label_Y" />
                <Spinner fx:id="spinnerMouseAreaY"
                         minWidth="58" maxWidth="58"/>
              </children>
            </HBox> -->

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

  </panes>
</Accordion>
