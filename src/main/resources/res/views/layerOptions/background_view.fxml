<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Accordion fx:id="backgroundOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.BackgroundController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">

  <panes>
    <TitledPane fx:id="tiledPaneImage" text="Imagen">
      <VBox alignment="TOP_CENTER" spacing="5">
        <Button fx:id="buttonImage" text="button_background_image" onAction="#handleButtonClick" />
        <HBox fx:id="hboxImage" alignment="BOTTOM_CENTER" minHeight="120.0" maxHeight="100.0" >
          <children>
            <ImageView fx:id="imagePreview"
                       fitWidth="120" fitHeight="100" preserveRatio="true"/>
          </children>
        </HBox>
        <Label fx:id="labelImage" wrapText="true" text="label_background_image" />
      </VBox>
    </TitledPane>

    <TitledPane fx:id="titledPaneColor" text="Color">
      <VBox fx:id="vboxColor" alignment="TOP_CENTER" spacing="5">
        <ColorPicker fx:id="colorPicker" minHeight="-Infinity" minWidth="-Infinity" />
        <Label fx:id="labelColor" wrapText="true" text="label_background_color" />
      </VBox> 
    </TitledPane>
  </panes>
</Accordion>
