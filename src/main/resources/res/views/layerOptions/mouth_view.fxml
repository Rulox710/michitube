<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<Accordion fx:id="mouthOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.MouthController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
  <panes>

    <TitledPane fx:id="titledPaneMouth" text="title_mouth">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <VBox alignment="TOP_CENTER" spacing="10">
              <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
              </padding>

              <children>
                <Button fx:id="buttonMouth" text="button_mouth"
                        onAction="#handleButtonClick"/>
                <HBox fx:id="hboxMouth" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewMouth"
                               fitWidth="130" fitHeight="105"
                               preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelMouth" minHeight="-Infinity"
                       wrapText="true" text="label_mouth"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneTalk" text="title_talk">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <VBox alignment="TOP_CENTER" spacing="10">
              <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
              </padding>

              <children>
                <CheckBox fx:id="checkboxMicrophone"
                          text="label_microphone_detection">
                  <tooltip>
                    <Tooltip fx:id="tooltipMicrophone"
                             text="tooltip_microphone_detection"/>
                  </tooltip>
                </CheckBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                  <children>
                    <Label fx:id="labelMicrophoneChannel"
                           minWidth="-Infinity" wrapText="false"
                           text="label_microphone_channels"/>
                    <Slider fx:id="sliderMicrophoneChannel"
                            blockIncrement="1" majorTickUnit="1" max="2" min="1"
                            minorTickCount="0" showTickLabels="true"
                            snapToTicks="true" value="1"/>
                  </children>
                </HBox>

                <HBox alignment="BOTTOM_RIGHT" spacing="4">
                  <children>
                    <Label fx:id="labelMicrophoneUpdate" textAlignment="RIGHT"
                           minHeight="-Infinity" wrapText="true"
                           text="label_microphone_ups" />
                    <Spinner fx:id="spinnerMicrophoneUpdate"
                             minWidth="58" maxWidth="58"/>
                    <Label fx:id="labelTalkSec" minWidth="30" maxWidth="30"
                           text="label_seconds"/>
                  </children>
                </HBox>

                <VBox spacing="5">
                  <children>
                    <Label fx:id="labelMicrophoneSensitivity"
                           text="label_microphone_sensitivity"/>

                    <StackPane fx:id="micSensitivityStack" alignment="TOP_LEFT">
                      <children>
                        <Region fx:id="micLevelOverlay"
                                styleClass="mic-sensitivity-overlay"/>
                        <Slider fx:id="sliderMicrophoneSensitivity"
                                majorTickUnit="50" max="100" min="0"
                                minorTickCount="0" showTickLabels="true"
                                showTickMarks="false" value="50"/>
                      </children>
                    </StackPane>
                  </children>
                </VBox>

                <Button fx:id="buttonTalk" text="button_talk"
                        onAction="#handleButtonClick"/>
                <HBox fx:id="hboxTalk" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewTalk"
                               fitWidth="130" fitHeight="105"
                               preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelTalk" minHeight="-Infinity" wrapText="true"
                       text="label_talk"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

  </panes>
</Accordion>
