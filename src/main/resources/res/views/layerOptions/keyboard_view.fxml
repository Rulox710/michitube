<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Accordion fx:id="keyboardOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.KeyboardController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
  <panes>

    <TitledPane fx:id="titledPaneOff" text="title_keyboard_off">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <VBox alignment="TOP_CENTER" spacing="10">
              <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
              </padding>

              <children>
                <Button fx:id="buttonHandOff" text="button_select_image" onAction="#handleButtonClick">
                  <tooltip>
                    <Tooltip fx:id="tooltipBHandOff" text="tooltip_bhandoff"/>
                  </tooltip>
                </Button>

                <HBox fx:id="hboxHandOff" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewOff"
                               fitWidth="130" fitHeight="105" preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelHandOff" wrapText="true" text="label_handoff"/>
              </children>
            </VBox>
          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneOn" text="title_keyboard_on">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true">
          <content>

            <VBox alignment="TOP_CENTER" spacing="10">
              <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
              </padding>

              <children>
                <CheckBox fx:id="checkboxKeyboard" text="checkbox_keyboard_detection">
                  <tooltip>
                    <Tooltip fx:id="tooltipKeyboard" text="tooltip_keyboard_detection"/>
                  </tooltip>
                </CheckBox>

                <Button fx:id="buttonHandOn" text="button_select_image" onAction="#handleButtonClick">
                  <tooltip>
                    <Tooltip fx:id="tooltipBHandOn" text="tooltip_bhandon"/>
                  </tooltip>
                </Button>

                <HBox fx:id="hboxHandOn" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewOn"
                               fitWidth="130" fitHeight="105" preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelHandOn" wrapText="true" text="label_handon"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

  </panes>
</Accordion>
