<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox"
      fx:controller="app.maker.controllers.MainController"
      xmlns="http://javafx.com/javafx/17.0.15"
      xmlns:fx="http://javafx.com/fxml/1">
  <children>

    <!-- <fx:include fx:id="menuBarInclude" source="menubar_view.fxml" /> -->

    <HBox fx:id="mainHBox"
          HBox.hgrow="ALWAYS" maxWidth="Infinity" VBox.vgrow="ALWAYS" spacing="2.0">
      <children>

        <SplitPane dividerPositions="0.3" orientation="VERTICAL"
                   minWidth="200.0" maxWidth="200.0" VBox.vgrow="ALWAYS">
          <items>

            <AnchorPane HBox.hgrow="ALWAYS" maxWidth="Infinity" minHeight="90.0">
              <children>

                <ScrollPane fx:id="scrollpaneOptions"
                            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                            fitToWidth="true" fitToHeight="true">
                  <content>
                    <!-- <fx:include fx:id="vboxOptionsInclude" source="options_view.fxml" /> -->
                  </content>
                </ScrollPane>

              </children>
            </AnchorPane>

            <AnchorPane HBox.hgrow="ALWAYS" maxWidth="Infinity" minHeight="300.0">
              <children>
                <ScrollPane fx:id="scrollpaneLayerOptions"
                            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                            fitToWidth="true" fitToHeight="true">
                  <content>
                    <!-- <fx:include fx:id="vboxBackgroundInclude" source="background_view.fxml" /> -->
                  </content>
                </ScrollPane>


              </children>
            </AnchorPane>

          </items>
        </SplitPane>

        <ScrollPane minWidth="200.0" maxWidth="200.0"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true" fitToHeight="true">
          <content>

            <VBox fx:id="scrollpaneLayers"
                  minWidth="182.0" maxWidth="182.0" spacing="10.0"
                  VBox.vgrow="ALWAYS">
              <children>
                <!-- <fx:include source="/res/views/LayerButton.fxml"/> -->
              </children>
            </VBox>

          </content>
        </ScrollPane>

        <ScrollPane fx:id="scrollpaneSheet"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    fitToWidth="true" fitToHeight="true"
                    HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" >
          <content>

            <!-- <fx:include source="/res/views/sheet_view.fxml"/> -->

          </content>
        </ScrollPane>

      </children>
    </HBox>

  </children>
</VBox>
