<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Accordion fx:id="bodyOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.BodyController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
  <panes>

    <TitledPane fx:id="titledPaneImage" text="title_body_image">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <content>

            <VBox>
              <children>
                <Button fx:id="buttonImage" text="button_body_image"
                        onAction="#handleButtonClick"/>
                <HBox fx:id="hboxImage" styleClass="image-preview" >
                  <children>
                    <ImageView fx:id="imagePreview"
                               fitWidth="130" fitHeight="105"
                               preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelImage" text="label_body_image"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

  </panes>
</Accordion>
