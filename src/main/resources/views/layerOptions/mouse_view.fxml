<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<Accordion fx:id="mouseOptionsRoot"
           fx:controller="app.maker.controllers.layerOptions.MouseController"
           minWidth="182.0" maxWidth="182.0" VBox.vgrow="ALWAYS"
           xmlns="http://javafx.com/javafx/17.0.1"
           xmlns:fx="http://javafx.com/fxml/1">
  <panes>

    <TitledPane fx:id="titledPaneMouse" text="title_mouse">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <content>

            <VBox>
              <children>
                <Button fx:id="buttonMouse" text="button_mouse"
                        onAction="#handleButtonClick"/>
                <HBox fx:id="hboxMouse" styleClass="image-preview">
                  <children>
                    <ImageView fx:id="imagePreviewMouse"
                               fitWidth="130" fitHeight="105"
                               preserveRatio="true"/>
                  </children>
                </HBox>
                <Label fx:id="labelMouse" text="label_mouse"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneHand" text="title_hand">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <content>

            <VBox fx:id="vboxHand">
              <children>
                <ColorPicker fx:id="colorPicker"
                             minHeight="-Infinity" minWidth="-Infinity">
                  <!-- <tooltip>
                    <Tooltip fx:id="tooltipColor" text="tooltip_background_color"/>
                  </tooltip> -->
                  <value>
                    <Color red="0.8274509906768799"
                           green="0.8274509906768799"
                           blue="0.8274509906768799"/>
                  </value>
                </ColorPicker>

                <Label fx:id="labelHand" text="label_hand"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

    <TitledPane fx:id="titledPaneArea" text="title_area">
      <content>
        <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
          <content>

            <VBox>
              <children>
                <CheckBox fx:id="checkboxMovement" text="checkbox_movement">
                  <tooltip>
                    <Tooltip fx:id="tooltipMovement" text="tooltip_movement"/>
                  </tooltip>
                </CheckBox>

                <Label fx:id="labelArea" text="label_area"/>
              </children>
            </VBox>

          </content>
        </ScrollPane>
      </content>
    </TitledPane>

  </panes>
</Accordion>
